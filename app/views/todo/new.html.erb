<div style='margin: auto; width: 500px'>
<h2>Create Todo List</h2>

<%= form_with model: @todo, url: users_todo_index_path do |form| %>
    <div>
        <%= form.label :title, :class=>'form-label'%><br>
        <%= form.text_field :title, :class=>'form-control'%>
        <% @todo.errors.full_messages_for(:title).each do |msg|%>
            <div><% msg %></div>
        <%end%>
    </div>
    <div style="margin-bottom: 10px;">
        <%= form.label :description, :class=>'form-label' %><br>
        <%= form.text_area :description, :class=>'form-control' %>
        <% @todo.errors.full_messages_for(:description).each do |msg|%>
            <div><% msg %></div>
        <%end%>
    </div>
    <div style="margin-bottom: 10px;">
        <%= form.label :category, :class=>'form-label' %><br>
        <%= form.text_field :category, :class=>'form-control' %>
        <% @todo.errors.full_messages_for(:category).each do |msg|%>
            <div><% msg %></div>
        <%end%>
    </div>
    <div style="margin-bottom: 10px;">
        <%= form.label :deadline, :class=>'form-label' %><br>
        <%= form.date_field :deadline, :class=>'form-control' %>
        <% @todo.errors.full_messages_for(:deadline).each do |msg|%>
            <div><% msg %></div>
        <%end%>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
</div>